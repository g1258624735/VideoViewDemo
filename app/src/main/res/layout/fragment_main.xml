<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_video_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原生VideoView播放本地视频"
        app:layout_constraintBottom_toTopOf="@+id/btn_video_net"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_video_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原生VideoView播放网络视频"
        app:layout_constraintBottom_toBottomOf="@+id/btn_explore_local"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_video_local" />

    <Button
        android:id="@+id/btn_explore_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="explore播放本地视频"
        app:layout_constraintBottom_toTopOf="@+id/btn_explore_net"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_video_net"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_explore_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="explore播放网络视频"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_explore_local" />

</android.support.constraint.ConstraintLayout>